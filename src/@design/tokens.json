{
    "__settings": {
        "utilityBreakpoints": "breakpoints"
    },
    "color": {
        "__settings": {
            "generateUtility": [
                {
                    "className": "bg",
                    "property": "background-color"
                },
                {
                    "className": "text",
                    "property": "color"
                }
            ]
        },

        "primary": "#45c5af",
        "primary-light": "#6dd3c0",
        "primary-dark": "#359e8c",
        "secondary": "#dafdb9",
        "success": "#28a745",
        "warning": "#e9ab30",
        "error": "#e14e5e",

        "text-base": "#E9E9E9",
        "text-muted": "#B2B2B2",
        "bg-base": "#020B13",
        "bg-100": "#09131D"
    },

    "spacing": {
        "__settings": {
            "generateUtility": [
                {
                    "className": "m",
                    "property": "margin"
                },
                {
                    "className": "ml",
                    "property": "margin-left"
                },
                {
                    "className": "mr",
                    "property": "margin-right"
                },
                {
                    "className": "mx",
                    "property": ["margin-left", "margin-right"]
                },
                {
                    "className": "mt",
                    "property": "margin-top"
                },
                {
                    "className": "mb",
                    "property": "margin-bottom"
                },
                {
                    "className": "my",
                    "property": ["margin-top", "margin-bottom"]
                },
                {
                    "className": "p",
                    "property": "padding"
                },
                {
                    "className": "pl",
                    "property": "padding-left"
                },
                {
                    "className": "pr",
                    "property": "padding-right"
                },
                {
                    "className": "px",
                    "property": ["padding-left", "padding-right"]
                },
                {
                    "className": "pt",
                    "property": "padding-top"
                },
                {
                    "className": "pb",
                    "property": "padding-bottom"
                },
                {
                    "className": "py",
                    "property": ["padding-top", "padding-bottom"]
                }
            ]
        },
        "0": "0rem",
        "0-5": "0.25rem",
        "0-75": "0.375rem",
        "1": "0.5rem",
        "1-5": "0.75rem",
        "2": "1rem",
        "2-5": "1.25rem",
        "3": "1.5rem",
        "3-5": "1.75rem",
        "4": "2rem",
        "5": "2.5rem",
        "6": "3rem",
        "7": "3.5rem",
        "8": "4rem",
        "9": "4.5rem",
        "10": "5rem",
        "11": "5.5rem",
        "12": "6rem",
        "13": "6.5rem",
        "14": "7rem",
        "15": "7.5rem",
        "16": "8rem",
        "17": "8.5rem",
        "18": "9rem",
        "19": "9.5rem",
        "20": "10rem",

        "auto": "auto"
    },

    "breakpoints": {
        "xs": "480px",
        "sm": "640px",
        "md": "768px",
        "lg": "1024px",
        "xl": "1280px",
        "xxl": "1400px"
    },

    "text-align": {
        "__settings": {
            "generateUtility": [
                {
                    "className": "text-align",
                    "property": "text-align"
                }
            ]
        },
        "left": "left",
        "right": "right",
        "center": "center"
    },

    "typography": {
        "fontFamily": {
            "main": "var(--font-aptos)"
        },
        "fontSize": {
            "sm": "clamp(1rem, 0.875rem + 0.8vw, 1.125rem)",
            "base": "clamp(1.125rem, 0.8125rem + 1vw, 1.25rem)",
            "lg": "clamp(1.5rem, 1.125rem + 1.5vw, 2rem)",
            "xl": "clamp(2rem, 1.5rem + 2vw, 2.75rem)",
            "xxl": "clamp(3rem, 2.5rem + 2.5vw, 4rem)"
        }
    },

    "border": {
        "color": {
            "base": "rgba($color-primary-light, 0.35)",
            "light": "rgba($color-primary-light, 0.15)"
        },
        "radius": {
            "base": "0.65rem",
            "lg": "1.25rem"
        },
        "width": {
            "base": "1px"
        }
    },

    "boxShadow": {
        "base": "0 0 20px 2px rgba(0, 0, 0, 0.35)",
        "base-hover": "0 0 20px 2px rgba(0, 0, 0, 0.5)"
    },

    "animation": {
        "delay": {
            "__settings": {
                "generateUtility": [
                    {
                        "className": "animation-delay",
                        "property": "animation-delay"
                    }
                ]
            },
            "1": "500ms",
            "2": "1000ms",
            "3": "1500ms",
            "4": "2000ms",
            "5": "2500ms"
        },
        "transition": {
            "base": "120ms ease-in"
        }
    }
}
